.search i
  transform: scaleX(-1)

.searchformOff
  display: none
  margin-right: 10px

.searchform
  display: inline-block
  margin-right: 10px

  input
    height:28px

.slide_search-left
  animation: slide_search-left 0.5s

@keyframes slide_search-left
  0%
    -webkit-transform: translateX(-2000px) scale(0.7)
    transform: translateX(-2000px) scale(0.7)
    opacity: 0.7
  50%
    -webkit-transform: translateX(0px) scale(0.7)
    transform: translateX(0px) scale(0.7)
    opacity: 0.7
  100%
    -webkit-transform: scale(1)
    transform: scale(1)
    opacity: 1