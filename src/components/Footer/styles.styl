@import "../../globalStyles.styl";

.footer
    color: #FFFFFF
    background-image: linear-gradient(#4D7080, #325A6C)
    font-family: Font1
    display: flex
    width: 100%
    height 210px
    flex-direction: column
    justify-content: space-evenly
    align-items: center
    bottom: 0

.footer__social--icons
    width: 35px
    background-color: white
    border-radius: 50%
    padding: 5px
    border: 1px solid white
    margin: 0px 6px

.footer__title
    font-weight: 700
    font-size: 3em


.footer__subtitle
    display: flex
    justify-content: space-around
    width: 30%

.footer__subtitle h2
    font-size: 1.5em

.footer__comments
    font-weight: 200