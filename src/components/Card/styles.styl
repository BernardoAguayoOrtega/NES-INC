@import '../../globalStyles.styl'

.card
  width: 32%
  display: inline-block
  font-family: Font1
  margin-bottom: 1.5rem
  &:hover
    cursor: pointer
  &__content
    position: relative
    z-index: 2
    background-color: black
    &--image
      max-width: 100%
      object-fit: cover
      opacity: .6
    &--title
      z-index: 3
      position: absolute
      bottom: 0
      padding: .9rem
      line-height: 1.1
      font-size: 3.3rem
      font-weight: 800
      color: white

@media screen and (max-width: 480px)
  .card
    width: 80%
    &__content--title
      font-size: 2rem
@media screen and (min-width: 481px)
  .card
    width: 48%
    &__content--title
      font-size: 3rem
@media screen and (min-width: 768px)
  .card
    width: 48%
    &__content--title
      font-size: 3.2rem
@media screen and (min-width: 1024px)
  .card
    width: 32%
    &__content--title
      font-size: 3.3rem