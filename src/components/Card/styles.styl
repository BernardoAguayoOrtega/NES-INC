@import "../../stylus/variables.styl";

.card
  width: 100%
  display: inline-block
  font-family: Font1
  border-radius: 5px
  &__content
    position: relative
    z-index: 2
    // background: linear-gradient(0deg, black 50%, transparent)
    background-color: rgba(0,0,0,.8)
    border-radius: 5px
    &:hover
      cursor: pointer
      background: linear-gradient(0deg, #08c, transparent)
      transition: .3s;
    &--image
      width: 100%
      opacity: .7
      border-radius: 5px
    &--title
      z-index: 3
      position: absolute
      bottom: 0
      padding: .9rem
      line-height: 1.1
      font-size: 3.3rem
      font-weight: 800
      color: white
      text-shadow: 2px 3px black;

@media screen and (max-width: 480px)
  .card
    &__content--title
      font-size: 2.8rem
@media screen and (min-width: 481px)
  .card
    &__content--title
      font-size: 3.5rem
@media screen and (min-width: 767px)
  .card
    &__content--title
      font-size: 3.2rem
@media screen and (min-width: 1024px)
  .card
    &__content--title
      font-size: 3.3rem