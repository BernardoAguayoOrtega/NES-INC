//variables
@import "../../stylus/variables.styl";

.header
	width: 100%
	height: 100px
	display: flex
	justify-content: center
	background-color:color_primary
	position: sticky
	top:0
	z-index: 11

	.nav
		display: flex
		justify-content: space-between
		align-items: center
		max-width: 1200px
		&__logo
			margin: 0
			height: 100px

		&__right
			height: auto
			display: flex
			list-style: none
			justify-content: flex-end
			align-items:center

			span,a
				margin-right: 10px
				text-decoration:none
				color:white

			&--menu
				margin-bottom: 5px

			.search i
				transform: scaleX(-1)

			#searchform
				display: none
				margin-right: 10px

				input
					margin: 0 0 10px 0
					padding: 2px 2px
					background: #fff
					border: 1px solid gray
					color: #303030
					height: 24px
					font-size: 16px
					padding-top: 0px
					padding-left: 10px
					background-size: 20px 300px

@media screen and (max-width: 1200px)
	.nav
		width: 100%
@media screen and (min-width: 1200px)
	.nav
		width: 1200px
