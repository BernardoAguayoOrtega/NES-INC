//variables
color_primary = #36404e;

header
	width: 100%
	height: 70px
	background-color:color_primary

	nav
		display: flex
		justify-content: space-between
		width:80%
		margin:0 auto

		.nav-right-section
			height: auto
			display: flex
			list-style: none
			justify-content: flex-end
			align-items:center

			span
				margin-right: 10px
				text-decoration:none
				color:white

			.menu_icon
				margin-bottom: 5px

			.search i
				transform: scaleX(-1)
				
			#searchform
				display: none
				margin-right: 10px

				input
					margin: 0 0 10px 0
					padding: 2px 2px
					background: #fff
					border: 1px solid gray
					color: #303030
					height: 24px
					font-size: 16px
					padding-top: 0px
					padding-left: 10px
					background-size: 20px 300px