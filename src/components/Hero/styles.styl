.home__hero-container
 margin: 5% auto;
 display: flex;
 justify-content: center
 max-width: 70vw;
 max-height: 50vh;
 background: rgba(0,0,0,1);
 z-index: 10;
 position: relative;

.small
 max-width: 40vw;
 max-height: 40vh;

.home__hero-figure
 z-index: -1;
 width: 100%;

.home__hero-image
 width: 100%;
 height: 100%;
 background-size: cover;
 object-fit: cover;
 opacity: .5;
 &:hover
  opacity: .8;
  transition: .3s;

.home__hero-caption
 position: absolute;
 bottom: 20%;
 left: 10%;
 color: white;
 text-shadow: 2px 3px black;
 font-size: 3rem;
 font-weight: 500;