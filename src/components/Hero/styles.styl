@import "../../stylus/variables.styl";

.home__hero-container
  margin: 5% auto;
  display: flex;
  justify-content: center
  max-width: 1200px;
  max-height: 50vh;
  background: rgba(0,0,0,1);
  z-index: 10;
  position: relative;
  border-radius: 5px

.small
  max-width: 30vw;
  max-height: 30vh;

.home__hero-figure
  z-index: -1;
  width: 100%;

.home__hero-image
  width: 100%;
  height: 100%;
  background-size: cover;
  object-fit: cover;
  opacity: .5;
  border-radius: 5px
  &:hover
    opacity: .8;
    transition: .3s;

.home__hero-caption
  text-transform: uppercase
  position: absolute;
  bottom: 15%;
  left: 5%;
  color: white;
  text-shadow: 2px 3px black;
  font-family: Font1
  font-size: 3.5rem;
  font-weight: 800;

@media screen and (max-width: 480px)
  .home__hero-caption
      font-size: 2.5rem
@media screen and (min-width: 481px)
  .home__hero-caption
      font-size: 3.5rem
@media screen and (min-width: 767px)
  .home__hero-caption
      font-size: 3.2rem
@media screen and (min-width: 1024px)
  .home__hero-caption
      font-size: 4rem