@import "../../stylus/variables.styl"

.text
  display: flex
  justify-content: center

.text__Paragraph
  font-family: Font1
  width: 70%
  margin: 10px
  padding: 30px
  text-align: justify
  color: darkGray
  &--Title
    font-weight: 700
    font-size: 2.5rem
    text-transform: uppercase
  &--Subtitle > p
    color: color_primary
    font-size: 0.8rem
    font-weight: 500
    text-transform: capitalize
  & > p
    font-size: 1.4rem
    font-weight: 300

.text__Paragraph > p
  margin: 2.5rem 0px
  & > h2
    margin: 1.7rem 0px
    font-size: 1.5rem
    text-transform: capitalize
  & > p
    font-size: 1.4rem
    font-weight: 300
    line-height: 1.6em
    margin: 2rem 0px

@media screen and (max-width: 425px)
  .text__Paragraph
    width: 85%
    margin: 5px
    padding: 10px
    &--Title
      font-weight: 600
      font-size: 2rem
    & > p
      font-size: 1.3rem

  .text__Paragraph > p
    & > h2
      font-size: 1.4rem
    & > p
      font-size: 1.3rem


@media screen and (max-width: 375px)
  .text__Paragraph
    width: 88%
    margin: 5px
    padding: 10px
    &--Title
      font-weight: 600
      font-size: 1.8rem
    & > p
      font-size: 1.2rem

  .text__Paragraph > p
    & > h2
      font-size: 1.3rem
    & > p
      font-size: 1.2rem

@media screen and (max-width: 320px)
  .text__Paragraph
    width: 90%
    padding: 5px
    &--Tittle
      font-size: 1.7rem

  .text__Paragraph > p
    & > h2
      font-size: 1.2rem
    & > p
      font-size: 1.2rem