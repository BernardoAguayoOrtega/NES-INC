@import '../../stylus/variables.styl'

.post
  margin: 0 auto
  max-width: 1200px
  &__content
    margin: 0 auto
    padding-top: 10%
    margin-bottom: 2rem
    max-width: 800px
    &--headline
      h1
        text-align: center
        font-family: Font1
        font-size: 8rem
        letter-spacing: .5rem
        line-height: 5rem
      margin-bottom: 1rem
    &--image
      margin-top: 1.8rem
      object-fit: cover
      width: 100%
      height: 400px
      border-radius: 2px
    &--text
      margin-top: 2rem
      p
        color: text;
        text-align: justify
        line-height: 2rem
        font-family: Font2
        font-size: 1.28rem
    &--quote
      display: flex
      justify-content: center
      margin-top: 2rem
      h3
        color: #36404E
        text-align: justify
        line-height: 1.5rem
        font-family: Font2
        font-size: 2rem
      a
        text-decoration: none
        &:hover
          text-decoration: underline #36404E
  &__comments
      margin: 2rem auto
      max-width: 830px

@media screen and (max-width: 480px)
  .post
    &__content
      &--headline
        h1
          font-size: 2rem
          line-height: 2rem

@media screen and (min-width: 480px)
  .post
    &__content
      &--headline
        h1
          font-size: 3rem
          line-height: 3rem

@media screen and (max-width: 520px)
  .post
    &__content
      &--text
        p
          font-size: 1rem
      &--quote
        h3
          font-size: 1.5rem

@media screen and (min-width: 580px)
  .post
    &__content
      &--headline
        h1
          font-size: 4rem
          line-height: 3.5rem

@media screen and (min-width: 761px)
  .post
    &__content
      &--headline
        h1
          font-size: 5rem
          line-height: 4.5rem

@media screen and (max-width: 1200px)
  .post
    width: 90%
    margin: 0 auto
    &__content
      width: 100%
      &--image
        width: 100%

@media screen and (min-width: 1200px)
  .post
    width: 1200px
